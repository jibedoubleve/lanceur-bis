<ui:FluentWindow
    x:Class="Lanceur.Ui.WPF.Views.HotkeyBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="Lanceur"
    Width="1024"
    Height="40"
    d:DesignHeight="140"
    SizeToContent="WidthAndHeight"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="{Binding WindowBackdropStyle}"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <ObjectDataProvider
            x:Key="KeySource"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Key" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="Lanceur - Settings"
            Height="30"
            DockPanel.Dock="Top" />

        <ui:CardControl Grid.Row="1"
                        VerticalAlignment="Top"
                        Icon="{ui:SymbolIcon Keyboard24}"
                        d:LayoutOverrides="Width">
            <ui:CardControl.Header>
                <ui:TextBlock FontTypography="Body" Text="Hot key" />
            </ui:CardControl.Header>
            <StackPanel Orientation="Horizontal">
                <CheckBox
                    Margin="0,0,5,0"
                    Content="Ctrl"
                    IsChecked="{Binding IsCtrl}" />
                <CheckBox
                    Margin="0,0,5,0"
                    Content="Alt"
                    IsChecked="{Binding IsAlt}" />
                <CheckBox
                    Margin="0,0,5,0"
                    Content="Win"
                    IsChecked="{Binding IsWin}" />
                <CheckBox
                    Margin="0,0,5,0"
                    Content="Shift"
                    IsChecked="{Binding IsShift}" />
                <ComboBox ItemsSource="{Binding Source={StaticResource KeySource}}"
                          SelectedItem="{Binding Key, Converter={StaticResource IntToKeyEnumConverter}}" />
            </StackPanel>
        </ui:CardControl>

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="2">
            <ui:Button Appearance="Primary"
                       Width="90"
                       Margin="5"
                       Content="Ok"
                       Click="OnClickOk" />
            <ui:Button
                Width="90"
                Margin="5"
                Content="Cancel"
                Click="OnClickCancel" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>